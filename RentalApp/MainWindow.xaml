<Window x:Class="RentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="ClientsGrid" AutoGenerateColumns="true"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox x:Name="LastNameBox" Width="100" Margin="5"/>
                <TextBox x:Name="FirstNameBox" Width="100" Margin="5"/>
                <TextBox x:Name="MiddleNameBox" Width="100" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox x:Name="PassportSeriesBox" Width="80" Margin="5"/>
                <TextBox x:Name="PassportNumberBox" Width="100" Margin="5"/>
                <TextBox x:Name="AddressBox" Width="200" Margin="5"/>
            </StackPanel>
            <Button Content="Добавить клиента" Width="150" Margin="5" Click="AddClient_Click"/>
        </StackPanel>
    </Grid>
</Window>
